<div class="container">
<h1>Listing producers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>Collab</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @producers.each do |producer| %>
      <tr>
        <td><%= producer.id %></td>
        <td><%= producer.name %></td>
        <td><%= producer.email %></td>
        <td><%= producer.address %></td>
        <td><%= producer.phone %></td>
        <td><%= producer.twitter %></td>
        <td><%= producer.collab %></td>
        <td><%= link_to 'Show', producer %></td>
        <td><%= link_to 'Edit', edit_producer_path(producer) %></td>
        <td><%= link_to 'Destroy', producer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Producer', new_producer_path %>
</div>